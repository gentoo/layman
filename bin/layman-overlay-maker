# Dependencies
#
#-------------------------------------------------------------------------------

from layman.maker import Interactive

import sys

#===============================================================================
#
# MAIN
#
#-------------------------------------------------------------------------------

main = Interactive()
try:
    main()
except KeyboardInterrupt:
    print('\nProgram terminated successfully.\nGoodbye...')
    sys.exit()
